# Production Environment Variables
# Bu dosyayı backend/ klasörüne .env olarak kaydet
# cPanel'de yüklerken bu dosyayı .env olarak yeniden adlandır

# ===== DATABASE =====
# PostgreSQL
DATABASE_URL=postgresql://USERNAME:PASSWORD@localhost/seyirtepe_db

# MySQL kullanıyorsan:
# DATABASE_URL=mysql+pymysql://USERNAME:PASSWORD@localhost/seyirtepe_db

# ===== JWT SECURITY =====
# !!! CHANGE THIS TO A STRONG RANDOM SECRET !!!
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS =====
# Kendi domain'inle değiştir
FRONTEND_URL=https://yourdomain.com

# Birden fazla domain için:
# FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com

# ===== EMAIL / SMTP =====
# cPanel mail ayarlarını kullan
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=465
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Seyirtepe Restaurant

# ===== FILE UPLOADS =====
# cPanel'de tam path olmalı
# /home/USERNAME/ kısmını kendi cPanel kullanıcı adınla değiştir
UPLOAD_DIR=/home/USERNAME/backend_app/uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ===== APPLICATION =====
APP_NAME=Seyirtepe Restaurant
APP_ENV=production
DEBUG=False

# ===== ADMIN =====
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeMeToStrongPassword123!

# ===== OPTIONAL: Rate Limiting =====
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ===== OPTIONAL: Redis Cache (eğer varsa) =====
# REDIS_URL=redis://localhost:6379/0

# ===== OPTIONAL: Sentry (Error tracking - opsiyonel) =====
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===== OPTIONAL: Google Analytics =====
# GA_TRACKING_ID=G-XXXXXXXXXX
