# Database (SQLite)
DATABASE_URL=sqlite:///./seyirtepe.db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=info@seyirtepe.com
EMAILS_FROM_NAME=Seyirtepe Restaurant

# Contact form recipient
CONTACT_TO_EMAIL=umitsabir@hotmail.com

# Optional SMTP mode overrides
# For port 587: STARTTLS is typical
# For port 465: TLS (implicit) is typical
#SMTP_USE_TLS=
#SMTP_STARTTLS=

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=5242880

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
